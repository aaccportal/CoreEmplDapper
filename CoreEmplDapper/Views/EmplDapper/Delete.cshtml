@model CoreEmplDapper.Models.Empl
@{
    ViewData["Title"] = "Удаление пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>FirstName</dt>
        <dd>
            @Model.FirstName
        </dd>

        <dt>LastName</dt>
        <dd>
            @Model.LastName
        </dd>

        <dt>Title</dt>
        <dd>
            @Model.Title
        </dd>

        <dt>BirthDate</dt>
        <dd>
            @Model.BirthDate
        </dd>

        <dt>City</dt>
        <dd>
            @Model.City
        </dd>
    </dl>

    <div>
        <form asp-controller="EmplDapper" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>