@model CoreEmplDapper.Models.Empl

@{
    ViewData["Title"] = "Редактировать пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<form asp-action="Edit" asp-controller="EmplDapper">
    <div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input type="text" asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="BirthDate"></label>
            <input type="text" asp-for="BirthDate" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <input type="text" asp-for="City" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="EmplDapper" asp-action="Index">Вернуться к списку</a>
</div>
